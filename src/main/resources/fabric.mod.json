	"authors": [
		"EternalHell"
	],
	"contact": {
		"homepage": "https://eterneon.net/",
		"sources": "https://github.com/Eterneon/fabric-bloom"
	},
	"license": "GPL-3.0",
	"icon": "assets/bloom/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"net.eterneon.bloom.Bloom"
		],
		"fabric-datagen": [
			"net.eterneon.bloom.BloomDataGenerator"
		],
      "client": [
        "net.eterneon.bloom.BloomClient"
      ]
	},
	"mixins": [
		"bloom.mixins.json"
	],
	"depends": {
		"fabricloader": ">=0.17.2",
